    font-weight: 300
    width: 85%
  p
    font-weight: 400
    color: #F78C6C
    font-size: 12px
  .steps
    padding-top: 140px
    text-align: center
    h3 
      color #C3E88D
      font-size: 16px
      font-weight: 300

footer 
  padding-top 40px
  padding-bottom: 10px
  color: #89DDFF
  h2 
    font-size: 12px
    color: #B2CCD6
  .love 
    color #FF5370
  .menu-right
    float: right
    ul
      font-size: 12px
      li
        list-style: none
        display: inline-block
        margin-right: 8px