@import url('https://fonts.googleapis.com/css?family=Lobster');
@import 'https://maxcdn.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css'

body 
  background-color: #292D3E
  color #959DCB
a 
 color #959DCB
 &:hover 
  color: #C3E88D
header
  .logo 
    h1 
      font-family: 'Lobster', cursive
      font-size: 32px
      color #FF5370
      padding: 20px
  .menu 
    float: right
    padding: 25px
